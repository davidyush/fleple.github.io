body, div, header, ul, h1, h2, h3, h4, h5, h6, p, footer
  margin 0
  padding 0
  font-family 'Scada', sans-serif

ul
  list-style none

a
  text-decoration none

blue = #1897d8
red = #e91e2b
green = #cedc37
yellow = #ffef49

link(color)
  border-bottom 2px solid color
  transition all .3s ease-in-out
  color color
  display block
  font-size 20px
  line-height 90px
  box-sizing border-box
  &:hover
    color white
    background-color color
    border-radius 5px
    transform scale(1.05)

.header .container
  display flex
  justify-content space-between
  box-sizing border-box
  height 90px

.logo
  max-width 20%
  border-bottom 2px solid green
  transition all .3s ease
  height 90px
  &:hover
    background-color green
    cursor pointer
    transform scale(1.05)
    border-radius 5px
  img
    height 90px
    width 100%

.links
  display flex
  width 80%
  box-sizing border-box
  justify-content center
  // margin-left 50px
  li
    width 18%
    box-sizing border-box
    text-align center

.link-about, .menu-hebrew
  link(blue)
.link-achdut, .menu-geo
  link(red)
.link-gallery, .menu-tradition
  link(green)
.link-for-you, .menu-holidays
  link(blue)
.link-for-teacher, .menu-lessons
  link(red)
.link-for-parent
  link(green)

.main
  height calc(100% - 90px)
  position relative
  padding-top 20px
  display flex
  justify-content space-around

.wrap-kids
  width 150px
  position fixed
  bottom 20px
  right 20px
  transition all .4s ease
  &:hover
    cursor pointer
    animation spin 1s linear infinite
  img
    width 100%

.post
  width 700px
  box-sizing border-box
  margin 0 auto
  padding 20px
  background-color #e6edec
  border-radius 3px
  margin-bottom 20px
  .post-title
    color blue
    margin-bottom 20px
    border-bottom 2px solid red
  iframe
    width 660px
    border-radius 3px
    display block
    box-sizing border-box
    margin 0 auto
  .post-img
    width 560px
    margin 0 auto
    img
      width 100%

.sidebar-menu
  margin-bottom 100px
  li
    text-align center

.mosdot-bar
  display flex
  flex-direction column
  align-items center
  .mosdot-wrapper
    width 150px
    display block
    margin-bottom 30px
    transition all .3s ease-in-out
    img
      width 100%
    &:hover
      transform scale(1.1)

.footer
  background-color blue
  color white
  padding 20px
  .container
    display flex
    justify-content space-around

@keyframes spin
  0%
    transform: scale(1)
  20%
    transform: scale(1.4)
  50%
    transform: scale(1.2)
  70%
    transform: rotate(1.3)
  100%
    transform: rotate(1)
